{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "files": {
    "ignoreUnknown": false,
    "include": ["./guest-js/**/*", "./examples/tauri-app/**/*"],
    "ignore": [
      ".cargo/**",
      ".changes/**",
      ".github/**",
      "dist-js/**/*",
      "examples/tauri-app/node_modules/**",
      "examples/tauri-app/src-tauri/**",
      "node_modules/**",
      "permissions/**",
      "src/**",
      "target/**"
    ]
  },
  "formatter": {
    "enabled": false
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "useExhaustiveDependencies": "warn",
        "useHookAtTopLevel": "error"
      },
      "nursery": {
        "useComponentExportOnlyModules": "off",
        "useSortedClasses": {
          "level": "off",
          "fix": "safe",
          "options": {
            "attributes": ["className"],
            "functions": ["cn", "cva"]
          }
        }
      },
      "style": {
        "useImportType": "info"
      }
    }
  },
  "organizeImports": { "enabled": false }
}
